<body class="blog-page">
    <header class="site-header">
        <div class="header-bar">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-10 col-lg-4">
                        <h1 class="site-branding flex">
                            <a href="/index">SUNFEST</a>
                        </h1>
                    </div>

                    <div class="col-2 col-lg-8">
                        <nav class="site-navigation">

                            <ul>
                                <li><a href="/index">HOME</a></li>
                                <li><a href="/sunfest">SUNFEST</a></li>
                                <li><a href="/artists">ARTISTS</a></li>
                                <li><a href="/profile">PROFILE</a></li>
                                <li><a href="/contact">CONTACT</a></li>
                                <li><a href="/login">Logout</a></li>
                            </ul><!-- flex -->
                        </nav><!-- .site-navigation -->
                    </div><!-- .col-12 -->
                </div><!-- .row -->
            </div><!-- container-fluid -->
        </div><!-- header-bar -->
    </header><!-- .site-header -->

    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="entry-header">
                        <h2 class="entry-title">PROFILE</h2>

                        <ul class="breadcrumbs flex align-items-center">
                            <li><a href="#">Home</a></li>
                            <li>Blog</li>
                        </ul><!-- .breadcrumbs -->
                    </div><!-- entry-header -->
                </div><!-- col-12 -->
            </div><!-- row -->
        </div><!-- container -->
    </div><!-- page-header -->

    <div class="main-content">
        <div class="container">
            <div class="last-news">
                <div class="entry-header">
                    <div class="entry-title">
                        <p>ORDER HISTORY</p>
                        <h2>Purchased Tickets</h2>
                        <h3 style="color: green; font-weight: bold;"><br><br>Amount Payabale  :  Rs.<%= payable %></h3>
                    </div><!-- entry-title -->

                    <div>
                        <% if(payable!==0) { %>
                            <button type="button" class="btn btn-primary btn-lg pay-btn">Pay</button>
                            <button type="button" class="btn btn-primary btn-lg" style="margin-left: 20px;"><a href="/tickets" style="color: white; text-decoration: none;">Buy Tickets</a></button>
                        <% } else { %>
                            <button type="button" class="btn btn-primary btn-lg"><a href="/tickets" style="color: white; text-decoration: none;">Buy Tickets</a></button>
                        <% } %>
                    </div>

                </div>

                <div class="row blog-list-page">

                    <% tickets.forEach(ticket => { %>

                        <div class="col-12 col-md-6 single-blog-content">
                            <div class="blog-content">
                                
    
                                <div class="entry-content">
                                    <div class="entry-header">
                                        <h2><%= ticket.name %></h2>
                                    </div><!-- entry-header -->
    
                                    <div class="entry-description">
                                        <p><strong>Quantity : <%= ticket.quantity %></strong>
                                    </div><!-- entry-description -->
                                </div><!-- entry-content -->
                            </div>
                        </div><!-- col-6 -->

                    <% }); %>

                </div><!-- blog-list-page -->
            </div><!-- last-news -->
        </div><!-- container -->
    </div><!-- main-content -->

    <footer class="site-footer">
        <div class="footer-cover-title flex justify-content-center align-items-center">
            <h2>SUNFEST</h2>
        </div><!-- .site-footer -->

        <div class="footer-content-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="entry-title">
                            <a href="#">SUNFEST</a>
                        </div><!-- entry-title -->

                        <div class="entry-mail">
                            <a href="#">SAYHELLO@SUNFEST.COM</a>
                        </div><!-- .entry-mail -->

