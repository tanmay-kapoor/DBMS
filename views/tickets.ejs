<body class="tickets-page">
    <header class="site-header">
        <div class="header-bar">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-10 col-lg-4">
                        <h1 class="site-branding flex">
                            <a href="/index">SUNFEST</a>
                        </h1>
                    </div>

                    <div class="col-2 col-lg-8">
                        <nav class="site-navigation">

                            <ul>
                                <li><a href="/index">HOME</a></li>
                                <li><a href="/sunfest">SUNFEST</a></li>
                                <li><a href="/artists">ARTISTS</a></li>
                                <li><a href="/profile">PROFILE</a></li>
                                <li><a href="/contact">CONTACT</a></li>
                                <li><a href="/login">Logout</a></li>
                            </ul><!-- flex -->
                        </nav><!-- .site-navigation -->
                    </div><!-- .col-12 -->
                </div><!-- .row -->
            </div><!-- container-fluid -->
        </div><!-- header-bar -->
    </header><!-- .site-header -->

    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="entry-header">
                        <h2 class="entry-title">Buy tickets</h2>

                        <ul class="breadcrumbs flex align-items-center">
                            <li><a href="#">Home</a></li>
                            <li>Buy tickets</li>
                        </ul><!-- .breadcrumbs -->
                    </div><!-- entry-header -->
                </div><!-- col-12 -->
            </div><!-- row -->
        </div><!-- container -->
    </div><!-- page-header -->

    <div class="main-content">
        <div class="container">
            <div class="entry-header">
                <div class="entry-title">
                    <p>JUST THE BEST</p>
                    <h2>Select your ticket</h2>
                </div><!-- entry-title -->
            </div><!-- entry-header -->

            <div class="row">
                <div class="col-12">
                    <div class="event-tickets" style="padding-top: 80px;">
                        <form action="/buy" method="post">

                            <% foundTickets.forEach(ticket => { %>
                                <div class="ticket-row flex flex-column flex-lg-row justify-content-lg-between align-items-lg-center">
                                    <div class="ticket-type flex flex-column flex-lg-row align-items-lg-center">
                                        <h3 class="entry-title"><%= ticket.name %></h3>
        
                                        <span class="mt-2 mt-lg-0"><%= ticket.description %></span>
        
                                        <div class="ticket-price mt-3 mt-lg-0">
                                            Rs.<%= ticket.price %>
                                        </div><!-- ticket-price -->
                                    </div><!-- ticket-type -->
        
                                    <div class="flex align-items-center">
                                        <div class="number-of-tickets flex justify-content-between align-items-center">
                                            <span class="decrease-ticket">-</span>
                                            <input type="number" name="<%= ticket.name %>" value="1" class="ticket-count">
                                            <span class="increase-ticket">+</span>
                                        </div><!-- number-of-tickets -->
                                    </div><!-- flex -->
        
                                </div><!-- ticket-row -->
                            <% }); %>

                            <div style="width: 20%; margin: 50px auto 0;">
                                <a class="btn btn-dark clear-ticket-count">Clear</a>
                                <button type="submit" class="btn btn-success">Buy</button>
                            </div>

                        </form>
                    </div><!-- event-tickets -->
                </div><!-- col-12 -->
            </div><!-- row -->
        </div><!-- container -->
    </div><!-- main-content -->

    <footer class="site-footer">
        <div class="footer-cover-title flex justify-content-center align-items-center">
            <h2>SUNFEST</h2>
        </div><!-- .site-footer -->

        <div class="footer-content-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="entry-title">
                            <a href="#">SUNFEST</a>
                        </div><!-- entry-title -->

                        <div class="entry-mail">
                            <a href="#">SAYHELLO@SUNFEST.COM</a>
                        </div><!-- .entry-mail -->

